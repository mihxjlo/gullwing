rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Session-based access for pairing
    // Any authenticated user can read/write sessions
    // In production, you may want stricter rules based on session membership
    match /sessions/{sessionId} {
      // Any authenticated user can create, read, and update sessions
      allow create, read, update: if request.auth != null;
      allow delete: if false; // Only cleanup jobs should delete
      
      // Devices within a session
      match /devices/{deviceId} {
        allow read, create, update: if request.auth != null;
        allow delete: if true;
      }
      
      // Clipboard items within a session
      match /clipboard_items/{itemId} {
        allow read, create, update, delete: if request.auth != null;
      }
    }
    
    // Pairing codes for quick lookup
    match /pairing_codes/{code} {
      allow read, create: if true;
      allow update, delete: if true;
    }
    
    // Legacy user-based access (kept for backwards compatibility)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      match /devices/{deviceId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /clipboard_items/{itemId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
